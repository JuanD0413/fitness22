---
import "../styles/global.css";
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Fitness22</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body class="bg-gray-100 text-gray-800">
    <header class="bg-black text-white p-4 flex justify-between items-center">
      <h1 class="text-2xl font-bold">Fitness22</h1>
      <nav class="space-x-4">
        <a href="#servicios" class="hover:underline">Servicios</a>
        <a href="#planes" class="hover:underline">Planes</a>
        <a href="#contacto" class="hover:underline">Contacto</a>
      </nav>
    </header>

    <main>
      <!-- Hero -->
      <section
        class="bg-cover bg-center h-[400px] flex items-center justify-center text-white text-center"
        style="background-image: url('/hero.jpg');"
      >
        <div class="bg-black bg-opacity-60 p-6 rounded">
          <h2 class="text-4xl font-bold mb-4">#Entrenateparalavida</h2>
          <a
            href="https://wa.me/573217897122"
            target="_blank"
            class="bg-green-500 hover:bg-green-600 text-white py-2 px-4 rounded"
          >
            Agendar clase gratis por WhatsApp
          </a>
        </div>
      </section>

      <!-- Servicios -->
      <section id="servicios" class="p-8 bg-white text-center">
        <h3 class="text-3xl font-bold mb-6">Nuestros Servicios</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="p-4 border rounded">💪 Pesas</div>
          <div class="p-4 border rounded">🧘 Clases dirigidas</div>
          <div class="p-4 border rounded">🏃 Cardio</div>
        </div>
      </section>

      <!-- Planes -->
      <section id="planes" class="p-8 bg-gray-100 text-center">
        <h3 class="text-3xl font-bold mb-6">Planes de Membresía</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="p-6 bg-white rounded shadow">
            <h4 class="text-xl font-bold">Básico</h4>
            <p>$80.000/mes</p>
          </div>
          <div class="p-6 bg-white rounded shadow">
            <h4 class="text-xl font-bold">Full</h4>
            <p>$120.000/mes</p>
          </div>
          <div class="p-6 bg-white rounded shadow">
            <h4 class="text-xl font-bold">Premium</h4>
            <p>$150.000/mes</p>
          </div>
        </div>
      </section>

      <!-- Contacto -->
      <section id="contacto" class="p-8 bg-white text-center">
        <h3 class="text-3xl font-bold mb-6">Contáctanos</h3>
        <p>📍 Calle 123 # 45-67, Bogotá</p>
        <p>📞 300 000 0000</p>
        <a
          href="https://wa.me/573217897122"
          target="_blank"
          class="mt-4 inline-block bg-green-500 hover:bg-green-600 text-white py-2 px-4 rounded"
        >
          Habla con nosotros por WhatsApp
        </a>
      </section>

      <!-- Testimonios -->
      <section class="p-8 bg-gray-200 text-center">
        <h3 class="text-3xl font-bold mb-6">Testimonios</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="p-4 border rounded">
            <p>
              "¡El mejor gimnasio de la ciudad! Me encanta el ambiente y las
              clases."
            </p>
            <p class="mt-2 font-semibold">- Ana Pérez</p>
          </div>
          <div class="p-4 border rounded">
            <p>
              "Los entrenadores son muy profesionales y siempre están dispuestos
              a ayudar."
            </p>
            <p class="mt-2 font-semibold">- Carlos Gómez</p>
          </div>
        </div>
      </section>

      <!--map -->
      <section class="p-8 bg-white text-center">
        <div class="w-full h-64">
          <iframe
            class="w-full h-full"
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3975.9020378446403!2d-75.725121!3d4.786841000000001!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e387d8333e10725%3A0x57aae2bf4d8951a2!2sGIMNASIO%20FITNESS%2022!5e0!3m2!1ses!2sco!4v1749047245864!5m2!1ses!2sco"
            allowfullscreen=""
            loading="lazy"></iframe>
        </div>
      </section>

      <!-- Redes Sociales -->
      <section class="p-8 bg-gray-200 text-center">
        <h3 class="text-3xl font-bold mb-6">Síguenos en Redes Sociales</h3>
        <div class="flex justify-center space-x-4">
          <a
            href="https://www.facebook.com/Fitness22"
            target="_blank"
            class="text-blue-600 hover:underline">Facebook</a
          >
          <a
            href="https://www.instagram.com/Fitness22"
            target="_blank"
            class="text-pink-600 hover:underline">Instagram</a
          >
        </div>
      </section>
    </main>

    <footer class="bg-black text-white text-center p-4">
      &copy; 2025 Fitness22. Todos los derechos reservados.
    </footer>
  </body>
</html>
